{
    "compilerOptions": {
        "target": "es2016",
        "moduleDetection": "force",
        "module": "Node16",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node16"
    },
    "include": [
        "src/**/*"
    ]
}